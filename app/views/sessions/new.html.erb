<%= form_tag({ controller: 'sessions', action: 'create', method: 'post' }) do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>

  <%= label_tag :email %>
  <%= text_field_tag :email %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag 'Sign In' %>
<% end %>
